                  </tr>
                </thead>
                <tbody>
                  <% if(record.length >0) {%>
                    <% record.forEach(function(element){ %>
                      <tr>
                        <th scope="row">-></th>
                        <td><%= element.date %></td>
                        <td><%= element.startTime %></td>
                        <td><%= element.endTime %></td>

